<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <style type="text/css">
		body{
			background:url("3.jpg") top center;
		}
		.box{
			height: 150px;
			background:rgba(255,255,255,0.3);
			text-align:center;
			padding-top:50px;
		}
		.box img{
			cursor:pointer;
		}
        </style>
            <script>
            window.onload=function(){
            	// 要做事先找人
            	// 事件源.事件=事件处理程序
            	var pic1=document.getElementById("pic1");
            	var pic2=document.getElementById("pic2");
            	var pic3=document.getElementById("pic3");
            	pic1.onclick=function(){
            		document.body.style.backgroundImage="url(2.jpg)";
            	}
            	pic2.onclick=function(){
            		document.body.style.backgroundImage="url(3.jpg)";
            	}
            	pic3.onclick=function(){
            		document.body.style.backgroundImage="url(4.jpg)";
            	}	
            }
    		</script>
    </head>
    <body>
	<div class="box">
		<img src="2.jpg" alt="" width="150px" id="pic1">
		<img src="3.jpg" alt="" width="150px" id="pic2">
		<img src="4.jpg" alt="" width="150px" id="pic3">
	</div>
    </body>
</html>
